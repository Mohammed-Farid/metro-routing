<input type="hidden" name="source" id="sourceName" value="{{source}}">
<input type="hidden" name="destination" id="destinationName" value="{{destination}}">

<form action="/results" method="get" class="p-2">
    <select class="custom-select my-2 droid-arabic-kufi" id="source" name="source">
        {{#each lines}}
        <optgroup label="{{name}}">
            {{#each stops}}
            <option class="droid-arabic-kufi">{{ this }}
            </option>

            <h5>{{this}}</h5>
            {{/each}}
        </optgroup>
        {{/each}}
    </select>

    <select class="custom-select my-2 droid-arabic-kufi" id="destination" name="destination">
        {{#each lines}}
        <optgroup label="{{name}}">
            {{#each stops}}
            <option class="droid-arabic-kufi">{{ this }}
            </option>
            {{/each}}
        </optgroup>
        {{/each}}
    </select>

    <button type="submit" class="btn btn-primary droid-arabic-kufi mx-auto">بحث</button>
    <button id="switch" class="btn btn-primary text-center"><i class="fas fa-exchange-alt"></i></button>
</form>

<div class="alert alert-success mt-2" role="alert">
    <p class="alert-text droid-arabic-kufi">
        ستتوقف
        في
        {{stops}}
        {{stopsCount}}
        لذا
        عليك شراء تذكرة فئة الـ
        {{price}}
        جنيهات
    </p>
</div>

{{#each path}}
<div class="py-2">
    <ul class="list-group">

        <li class="list-group-item list-group-item-primary text-right droid-arabic-kufi">اتجاه {{direction}}</li>
        {{#each stops}}
        <li class="list-group-item text-right droid-arabic-kufi">{{this}}</li>
        {{/each}}

    </ul>
</div>
{{/each}}