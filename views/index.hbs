<p class="droid-arabic-kufi text-center">اسرع طريق بالمترو</p>

<form action="/results" method="get" class="p-2">
    <select class="custom-select my-2 droid-arabic-kufi" name="source">
        {{#each lines}}
        <optgroup label="{{name}}">
            {{#each stops}}
            <option class="droid-arabic-kufi">{{ this }}</option>
            {{/each}}
        </optgroup>
        {{/each}}
    </select>

    <select class="custom-select my-2 droid-arabic-kufi" name="destination">
        {{#each lines}}
        <optgroup label="{{name}}">
            {{#each stops}}
            <option class="droid-arabic-kufi">{{ this }}</option>
            {{/each}}
        </optgroup>
        {{/each}}
    </select>

    <button type="submit" class="btn btn-warning droid-arabic-kufi">بحث</button>

</form>